[user]
    name = MinervaP
    email = GoddessMinervaP@gmail.com
[core]
    excludesfile = /Users/Minerva/.gitignore_global
    editor = vim -c \"set fenc=utf-8\"
    pager = vimpager
    autoCRLF = false
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[alias]
    co = checkout
[push]
    default = simple
[credential]
    helper = cache --timeout=3600
